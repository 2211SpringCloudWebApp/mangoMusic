<main class="body" id="body-mypage">
    <nav class="navbar sticky-top mb-3" id="navbar-mypage">
        <div class="d-flex align-items-center justify-content-between" id="d-flex-mypage">
            <div class="d-flex"></div>
            <!-- <i class="fa-solid fa-chevron-left chevrons"></i><i class="fa-solid fa-chevron-right chevrons"></i> -->
        </div>

        <div class="d-flex align-items-center" id="rightnav">
            <div style="margin-right: 1rem">
            </div>
            <div class="dropdown" id="myPageDropDown">
                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1"
                        data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 25px;">
                        <!-- 유저 이미지 -->
                    <img src="../img/abstract-user-flat-3.svg"
                        style="width: 30px; height: 30px; border-radius: 50%" />
                        <!-- 유저이름 -->
                    &nbsp;&nbsp;{{loginUser.userName}}&nbsp;&nbsp;
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="/mypage">마이페이지</a></li>
                    <li><a class="dropdown-item" href="./Login/login.html">로그아웃</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="margin-top">
        <h2 class="greeting mb-3">MyPage</h2>
        <div class="profile">
            <div class="profile-img"></div>
            
<!--             닉네임 들어갈곳-->
            <div class="profile-name"><h1>{{loginUser.userName}}</h1></div>
            <div class="profile-letter"><span>{{loginUser.userProfileLetter}}</span></div>
        </div>
    </div>

    <div class="margin-top" id="mypage-content-container">
        <div class="mypage-content-left">
            <div class="point">
<!--                 포인트 값-->
                <span class="point-value">{{loginUser.pointVal}} <span class="point-value-text">Mango</span></span>
            </div>
            <div class="point-button-container">
                <button type="button" class="point-button" >충전</button>
                <button type="button" class="point-button">출금</button>
            </div>
        </div>
        <div class="mypage-content-right">
<!--            팔로우 검색 버튼-->
            <button type="button">검색</button>

            <div id="Accordion_wrap">
                <div class="que">
                    <span>팔로우 목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    {{#followers}}
                    <span>{{MyPageFollow.userName}}</span>
                    {{/followers}}
                </div>
                <div class="que">
                    <span>거래목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    {{#deals}}
                    <span>거래번호 : {{MyPageDeal.tradeNo}} | 거래시간 : {{MyPageDeal.dealDate}} | 구분 : {{MyPageDeal.dealType}} | 가격 : {{MyPageDeal.dealPrice}}</span>
                    {{/deals}}
                </div>
                <div class="que">
                    <span>좋아요 목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
<!--                    {{#likes}}-->
<!--                    <span>{{like.musicMbid}}</span>-->
<!--                    {{/likes}}-->
                </div>
            </div>
        </div>

    </div>
</main>

<script>
    $(".que").click(function() {
        $(this).next(".anw").stop().slideToggle(300);
        $(this).toggleClass('on').siblings().removeClass('on');
        $(this).next(".anw").siblings(".anw").slideUp(300); // 1개씩 펼치기
    });
</script>
