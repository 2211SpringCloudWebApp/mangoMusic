                <div class="que">
                    <span>팔로우 목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    <table>
                        <tr>
                            <th>이름</th>
                        </tr>
                    {{#followers}}
                        <tr>
                            <td>{{userName}}</td>
                        </tr>
                    {{/followers}}
                    </table>
                    <button type="button" onclick="window.open('/userSearch','','top=0, left=700, width=500, height=600')">검색</button>
                </div>
                <div class="que">
                    <span>거래목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    <table>
                        <tr>
                            <th>구분</th>
                            <th>번호</th>
                            <th>시간</th>
                            <th>가격</th>
                        </tr>
                    {{#deals}}
                        <tr>
                            <td>{{dealType}}</td>
                            <td>{{TradeNo}}</td>
                            <td>{{dealDate}}</td>
                            <td>{{dealPrice}}</td>
                        </tr>
                    {{/deals}}
                    </table>
                </div>
                <div class="que">
                    <span>좋아요 목록</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    <table>
                        <tr>
                            <th>제목</th>
                            <th>가수</th>
                        </tr>
                        <tr>
                    {{#likes}}
                        <input type="hidden" value="{{musicMbid}}" id="likeTag">
                        <td id="songName" style="width: 200px"></td>
                        <td id="songArtist"></td>
                    {{/likes}}
                        </tr>
                    </table>
                </div>
                <div class="que">
                    <span>포인트 충전 내역</span>
                    <div class="arrow-wrap">
                        <span class="arrow-top">-</span>
                        <span class="arrow-bottom">+</span>
                    </div>
                </div>
                <div class="anw">
                    <table>
                        {{#pointRecord}}
                        <tr>
                            <td style="width: 100px">{{pointPM}}
                            <td style="width: 300px; height: 40px">{{pointRecordDate}}
                            <td class="pointRecord-val-re"> <span> Mango</span>
