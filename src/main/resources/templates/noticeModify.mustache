{{>layouts/sidebar}}
<link rel="stylesheet" href="css/notice_wr.css" />
<main>

    <div id="main-all">
        <div class="main-header">
            <h2>공지사항</h2>
            <hr>
        </div>
        <div class="main-body">
            <form action="/noticeModify" method="post">
                <input type="hidden" name="csNo" value="{{cs.csNo}}">
                <div class="writer">
                    <ul>
                        <li>
                            <label>제목 :</label>
                            <input type="text" name="csSubject" value="{{cs.csSubject}}">
                        </li>
<!--                        <li>-->
<!--                            <label>작성자 :</label>-->
<!--                            <input type="text" name="userName">-->
<!--                        </li>-->
                        <li>
                            <textarea id="story txtArea" onkeypress="onTestChange();" name="csContent" rows="30" cols="100">{{cs.csContent}}</textarea>
                        </li>
                    </ul>
                    <div class="btn">
                        <input type="submit" value="수정하기">
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
<script>
    function onTestChange() {
        var key = window.event.keyCode;

        // If the user has pressed enter
        if (key === 13) {
            document.getElementById("txtArea").value = document.getElementById("txtArea").value + "\n*";
            return false;
        }
        else {
            return true;
        }
    }
</script>
