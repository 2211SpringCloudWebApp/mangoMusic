{{>layouts/sidebar}}
<main>
    <div id="main-all">
        <nav class="navbar sticky-top mb-3">
            <div class="d-flex align-items-center" id="rightnav">
                <div style="margin-right: 1rem">
                    {{^loginUser.userId}}
                        <button type="button" class="btn btn-outline-white text-light" style="border-radius: 20px" onclick="location.href='/login'">
                            로그인
                        </button>
                    {{/loginUser.userId}}
                </div>
                {{#loginUser.userId}}
                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 25px;">
                            <img src="https://i.pinimg.com/564x/08/35/96/083596835424340eda90439fd20e5ee9.jpg"
                                 style="width: 30px; height: 30px; border-radius: 50%" />
                            &nbsp;&nbsp;{{loginUser.userName}}&nbsp;&nbsp;
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="/mypage">마이페이지</a></li>
                            <li><a class="dropdown-item" href="./Login/login.html">로그아웃</a></li>
                        </ul>
                    </div>
                {{/loginUser.userId}}
            </div>
        </nav>
        <form action="">
            <div class="main-header">
                <h2>고객센터</h2>
                <hr>
            </div>
            <div class="main-body">
                <div class="body-top">
                    <a href="#">공지사항</a>
                    <a href="#">Q&A</a>
                </div>
                <div class="body-mid">
                    <table>
                        <tr>
                            <th>번호</th>
                            <th>제목</th>
                            <th>작성자</th>
                            <th>작성날짜</th>
                        </tr>
                        {{#cars }}
                            <a href="#">
                                <tr>
                                    <td>{{noticeNo}}</td>
                                    <td>{{noticeSubject}}</td>
                                    <td>{{userName}}</td>
                                    <td>{{noticeDate}}</td>
                                </tr>
                            </a>
                        {{/cars}}
                    </table>
                </div>
            </div>
        </form>
    </div>
</main>
{{>layouts/footer}}