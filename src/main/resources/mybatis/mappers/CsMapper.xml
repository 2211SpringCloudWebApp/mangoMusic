<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CsMapper">
    <resultMap id="NoticeResultMap" type="com.kh.mango.cs.domain.Notice">
        <id property="csNo" column="CS_NO"/>
        <result property="csSubject" column="CS_SUBJECT"/>
        <result property="csContent" column="CS_CONTENT"/>
        <result property="userName" column="USER_NAME"/>
        <result property="csDate" column="CS_DATE"/>
    </resultMap>

    <insert id="insertNotice">
        INSERT INTO CS_TBL VALUES (SEQ_CSNO.NEXTVAL, CS_CATEGORY = 1, #{csSubject}, #{csContent}, DEFAULT, USER_NO = 62)
    </insert>
    <delete id="deleteNotice">
        DELETE FROM CS_TBL WHERE CS_NO = #{csNo}
    </delete>
    <select id="selectNoticeList" resultMap="NoticeResultMap">
        SELECT CS_NO, CS_SUBEJECT,USER_NAME, CS_DATE FROM CS_TBL C JOIN USER_TBL U ON U.USER_NO = C.USER_NO WHERE CS_CATEGORY = 1 ORDER BY ROWNUM DESC
    </select>
    <select id="selectOneByName" resultMap="NoticeResultMap">
        SELECT * FROM CS_TBL WHERE CS_NO = #{csNo}
    </select>

</mapper>
